{
  "name": "tokative",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:release": "pnpm --filter @tokative/extension build:release",
    "dev": "turbo dev",
    "dev:convex": "cd packages/convex && npx convex dev",
    "deploy:convex:dev": "cd packages/convex && npx convex dev --once",
    "deploy:convex:prod": "cd packages/convex && npx convex deploy",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18"
  }
}
