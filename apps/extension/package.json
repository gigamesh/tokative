{
  "name": "@tokative/extension",
  "version": "1.1.1",
  "private": true,
  "scripts": {
    "build": "node scripts/build.js",
    "build:prod": "BUILD_ENV=production node scripts/build.js",
    "build:staging": "BUILD_ENV=staging node scripts/build.js",
    "dev": "node scripts/dev.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "zip": "node scripts/zip.js",
    "build:release": "npm run build:prod && npm run zip",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major"
  },
  "dependencies": {
    "@tokative/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "archiver": "^7.0.0",
    "chokidar": "^3.6.0",
    "esbuild": "^0.20.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.3.0",
    "ws": "^8.16.0"
  }
}
